<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>servlet.ServletControl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>articleServlet</servlet-name>
        <servlet-class>servlet.Article</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>servlet.Comments</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NewArcServlet</servlet-name>
        <servlet-class>servlet.NewArticle</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteArc</servlet-name>
        <servlet-class>servlet.Delete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/c</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>articleServlet</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/cs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>NewArcServlet</servlet-name>
        <url-pattern>/na</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteArc</servlet-name>
        <url-pattern>/da</url-pattern>
    </servlet-mapping>

</web-app>
